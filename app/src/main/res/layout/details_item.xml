<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                            android:id="@+id/l2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentTop="true"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:textColor="#0062AF"
                                android:fontFamily="@font/futuramedium"
                                android:text="Yacht History Supreme - The Most Expensive Yacht In The World"
                                android:textAlignment="center"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:text="X"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:text="0"
                                android:fontFamily="@font/futuramedium"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

            <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/l2"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/equalLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="="
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/amountSpent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="188,700,000,000"
                                android:textSize="16sp"
                                android:layout_marginStart="10dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/futuramedium"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/usdLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="USD"
                                android:textColor="#0062AF"
                                android:textSize="16sp"
                                android:fontFamily="@font/futuramedium"
                                android:layout_marginStart="10dp"
                                android:textAlignment="center"
                                android:textStyle="bold"/>
                        </LinearLayout>




        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>