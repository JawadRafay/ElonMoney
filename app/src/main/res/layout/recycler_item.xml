<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="310dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#F4F4F4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="#07000000"/>


            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/item_image"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/productName"
                android:layout_below="@id/productImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#0062AF"
                android:textAlignment="center"
                android:fontFamily="@font/futurabold"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:text="Yacht History Supreme - The Most Expensive Yacht In The World"/>


            <LinearLayout
                android:id="@+id/l2"
                android:layout_below="@id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/pValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,800,000,000"
                    android:textSize="15sp"
                    android:fontFamily="@font/futuramedium"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#0062AF"
                    android:fontFamily="@font/futuramedium"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_below="@id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sell"
                    android:layout_width="85dp"
                    android:layout_height="42dp"
                    app:backgroundTint="@null"
                    app:backgroundTintMode="add"
                    android:text="Sell"
                    android:clickable="true"
                    android:background="@drawable/glass"
                    android:textColor="#F86E6E"
                    android:textSize="16sp"
                    app:cornerRadius="20dp"
                    />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"

                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_buy"
                    android:layout_width="85dp"
                    android:layout_height="42dp"
                    android:text="Buy"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"
                    app:backgroundTint="@null"
                    app:backgroundTintMode="add"
                    android:background="@drawable/glass"
                    android:textColor="#044E08"
                    android:clickable="true"
                    android:textSize="16sp"
                    app:cornerRadius="2dp"/>



            </LinearLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>